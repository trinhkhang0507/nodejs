<form class="mt-4" name="container-form" method="post" action="/courses/handle-form-actions">
  <div>
    <h3>Khóa học của tôi</h3>
    <a href="/me/trash/courses">Thùng rác ({{deletedCount}})</a>
  

  
    <div class="mt-4 d-flex align-items-center gap-2">
      <div class="form-check">
        <input class="form-check-input border border-black" type="checkbox" value="" id="checkbox-all">
        <label class="form-check-label" for="checkbox-all">
          Chọn tất cả
        </label>
      </div>

      <select class="form-select form-select-sm checkbox-select-all-options w-25" aria-label="Small select example" name="action" required>
        <option value="">-- Chọn hành động --</option>
        <option value="delete">Xóa</option>
      </select>

      <button class="btn btn-danger btn-sm ms-2 check-all-submit-btn disabled" id="btn-delete-multiple">Xóa đã chọn</button>
    </div>
    
    

    <table class="table mt-4">
      <thead>
        <tr>
          <th></th>
          <th>#</th>
          <th>Tên khóa học</th>
          <th>Trình độ</th>
          <th>Thời gian tạo</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        {{#each courses}}
        <tr>
          <td>
            <div class="form-check">
              <input class="form-check-input mt-2 border border-black" type="checkbox" value="{{_id}}" name="courseIds[]">
            </div>
          </td>
          <th scope="row">{{sum @index 1}}</th>
          <td>{{name}}</td>
          <td>{{level}}</td>
          <td>{{createdAt}}</td>
          <td>
            <a href="/courses/{{_id}}/edit" class="btn btn-primary btn-sm">
              Sửa
            </a>

            <a
              href="#"
              class="btn btn-danger btn-sm"
              data-id="{{_id}}"
              data-bs-toggle="modal"
              data-bs-target="#delete-course-modal"
            >
              Xóa
            </a>
          </td>
        </tr>
        {{else}}
        <tr>
          <td colspan="5" class="text-center">
            Chưa có khóa học nào.
            <a href="/courses/create">Tạo khóa học mới</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</form>

{{!-- FORM DELETE ẨN --}}
<form name="delete-course-form" method="POST"></form>

{{!-- MODAL XÁC NHẬN XÓA --}}
<div
  class="modal fade"
  id="delete-course-modal"
  tabindex="-1"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title">Xóa khóa học</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
        ></button>
      </div>

      <div class="modal-body">
        Bạn chắc chắn muốn xóa khóa học này?
      </div>

      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-secondary"
          data-bs-dismiss="modal"
        >
          Hủy
        </button>

        <button
          id="btn-delete-course"
          type="button"
          class="btn btn-danger"
        >
          Xóa
        </button>
      </div>

    </div>
  </div>
</div>

<script>
  const deleteCourseModal = document.getElementById('delete-course-modal')
  const deleteForm = document.forms['delete-course-form']
  const containerForm = document.forms['container-form']
  const btnDeleteCourse = document.getElementById('btn-delete-course')
  const checkboxAll = document.querySelector('#checkbox-all')
  const courseItemCheckbox = document.querySelectorAll('input[name="courseIds[]"]')
  const checkAllSubmitBtn = document.querySelector('.check-all-submit-btn')

  let courseId

  if (deleteCourseModal) {
    deleteCourseModal.addEventListener('show.bs.modal', function (event) {
      const button = event.relatedTarget
      courseId = button.getAttribute('data-id')
    })
  }

  btnDeleteCourse.onclick = function () {
    deleteForm.action = `/courses/${courseId}?_method=DELETE`
    deleteForm.submit()
  }

  // Checkbox all changed
  checkboxAll.addEventListener('change', function () {
    courseItemCheckbox.forEach((checkbox) => {
      checkbox.checked = this.checked
      
    })
    renderCheckAllSubmitBtn()
  })

  // Course item checkbox clicked
  courseItemCheckbox.forEach((checkbox) => {
    checkbox.addEventListener('change', function () {
      if (!this.checked) {
        checkboxAll.checked = false
      } else {
        const allChecked = Array.from(courseItemCheckbox).every((cb) => cb.checked)
        checkboxAll.checked = allChecked
      }
      renderCheckAllSubmitBtn()
    })
    
  })

  // Check all submit button clicked
  checkAllSubmitBtn.addEventListener('click', function (e) {

    const isSubmittable = !this.classList.contains('disabled');

    if (!isSubmittable) {
      e.preventDefault();
    }
  });

  // Re-render check all submit button
  function renderCheckAllSubmitBtn () {
    const checkedCount = Array.from(courseItemCheckbox).filter((cb) => cb.checked).length
    if (checkedCount > 0) {
      checkAllSubmitBtn.classList.remove('disabled')
    } else {
      checkAllSubmitBtn.classList.add('disabled')
    }
  }



</script>
